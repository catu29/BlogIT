<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <!--Connect Database-->
    <resource-ref>
        <description>This is for connect to MySQL Database</description>
        <res-ref-name>jdbc/MySqlDatabase</res-ref-name>
        <res-type>javax.sql.DataSource</res-type>
        <res-auth>Container</res-auth>
    </resource-ref>
    <!--jsp config-->
    <jsp-config>
        <jsp-property-group>
            <url-pattern>*.jsp</url-pattern>
            <page-encoding>UTF-8</page-encoding>
        </jsp-property-group>
    </jsp-config>
    <!--Welcome file list-->
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>
    <!--Context param-->
    <context-param>&gt;
        <param-name>upload.location</param-name>
        <param-value>\Resources\img\</param-value>
    </context-param>
    <context-param>
        <param-name>PARAMETER_ENCODING</param-name>
        <param-value>UTF-8</param-value>
    </context-param>
    <!--Servlets-->
    <servlet>
        <servlet-name>PostCommentServlet</servlet-name>
        <servlet-class>Servlets.Post.PostCommentServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>PostsOfTagServlet</servlet-name>
        <servlet-class>Servlets.Post.PostsOfTagServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>RegisterServlet</servlet-name>
        <servlet-class>Servlets.User.RegisterServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>PostLikeServlet</servlet-name>
        <servlet-class>Servlets.Post.PostLikeServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LogoutServlet</servlet-name>
        <servlet-class>Servlets.User.LogoutServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UserServlet</servlet-name>
        <servlet-class>Servlets.User.UserServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>Servlets.User.LoginServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>PostDetailServlet</servlet-name>
        <servlet-class>Servlets.Post.PostDetailServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>HomeServlet</servlet-name>
        <servlet-class>Servlets.Home.HomeServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>TestServlet</servlet-name>
        <servlet-class>Test.TestServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UserProfileServlet</servlet-name>
        <servlet-class>Servlets.User.UserProfileServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>SeriesListPostServlet</servlet-name>
        <servlet-class>Servlets.Series.SeriesListPostServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>PostUpdateServlet</servlet-name>
        <servlet-class>Servlets.Post.PostUpdateServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>PostCreateServlet</servlet-name>
        <servlet-class>Servlets.Post.PostCreateServlet</servlet-class>
        <multipart-config/>
    </servlet>
    <servlet>
        <servlet-name>UserManagePostServlet</servlet-name>
        <servlet-class>Servlets.User.UserManagePostServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AdminManagePostServlet</servlet-name>
        <servlet-class>Servlet.Admin.AdminManagePostServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>PostDeleteServlet</servlet-name>
        <servlet-class>Servlets.Post.PostDeleteServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>SeriesCreateServlet</servlet-name>
        <servlet-class>Servlets.Series.SeriesCreateServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UserEditProfileServlet</servlet-name>
        <servlet-class>Servlets.User.UserEditProfileServlet</servlet-class>
        <multipart-config/>
    </servlet>
    <servlet>
        <servlet-name>UserManageSeriesServlet</servlet-name>
        <servlet-class>Servlets.User.UserManageSeriesServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>SeriesUpdateServlet</servlet-name>
        <servlet-class>Servlets.Series.SeriesUpdateServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>SeriesDeleteServlet</servlet-name>
        <servlet-class>Servlets.Series.SeriesDeleteServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>PostServlet</servlet-name>
        <servlet-class>Servlets.Post.PostServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>SearchServlet</servlet-name>
        <servlet-class>Servlets.Home.SearchServlet</servlet-class>
    </servlet>
    <!--Servlet-mapping-->
    <servlet-mapping>
        <servlet-name>PostCommentServlet</servlet-name>
        <url-pattern>/post/detail/comment</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>PostsOfTagServlet</servlet-name>
        <url-pattern>/tag</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>RegisterServlet</servlet-name>
        <url-pattern>/user/register</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>PostLikeServlet</servlet-name>
        <url-pattern>/post/detail/like</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LogoutServlet</servlet-name>
        <url-pattern>/user/logout</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UserServlet</servlet-name>
        <url-pattern>/user</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/user/login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>PostDetailServlet</servlet-name>
        <url-pattern>/post/detail</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UserProfileServlet</servlet-name>
        <url-pattern>/user/profile</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SeriesListPostServlet</servlet-name>
        <url-pattern>/series</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>PostUpdateServlet</servlet-name>
        <url-pattern>/post/detail/update</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>HomeServlet</servlet-name>
        <url-pattern>/home</url-pattern>
        <url-pattern>/home/</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>PostCreateServlet</servlet-name>
        <url-pattern>/post/create</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UserManagePostServlet</servlet-name>
        <url-pattern>/user/manage-post</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AdminManagePostServlet</servlet-name>
        <url-pattern>/admin/manage-post</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>TestServlet</servlet-name>
        <url-pattern>/TestServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>PostDeleteServlet</servlet-name>
        <url-pattern>/post/detail/delete</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SeriesCreateServlet</servlet-name>
        <url-pattern>/series/create</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UserEditProfileServlet</servlet-name>
        <url-pattern>/user/edit-profile</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UserManageSeriesServlet</servlet-name>
        <url-pattern>/user/manage-series</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SeriesUpdateServlet</servlet-name>
        <url-pattern>/series/update</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SeriesDeleteServlet</servlet-name>
        <url-pattern>/series/delete</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>PostServlet</servlet-name>
        <url-pattern>/post</url-pattern>
        <url-pattern>/post/</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SearchServlet</servlet-name>
        <url-pattern>/search</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            60
        </session-timeout>
    </session-config>
</web-app>
